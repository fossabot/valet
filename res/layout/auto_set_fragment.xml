<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/co.valetapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <co.valetapp.view.FontableTextView
        android:id="@+id/bluetoothTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_bluetooth"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        app:font="Gotham-Medium.ttf" />

    <Spinner
        android:id="@+id/bluetoothSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>