<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/co.valetapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <co.valetapp.view.FontableCheckBox
            android:id="@+id/bluetoothCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bluetoothSpinner"
            android:layout_alignParentLeft="true" />


        <co.valetapp.view.FontableTextView
            android:id="@+id/bluetoothTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_bluetooth"
            android:layout_alignBaseline="@+id/bluetoothSpinner"
            android:layout_toRightOf="@+id/bluetoothCheckBox"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            app:font="Gotham-Medium.ttf" />

        <Spinner
            android:id="@+id/bluetoothSpinner"
            android:layout_toRightOf="@+id/bluetoothTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <co.valetapp.view.FontableCheckBox
        android:id="@+id/sensorCheckBox"
        android:layout_width="match_parent"
        app:font="Gotham-Medium.ttf"
        android:textColor="@color/default_text"
        android:layout_height="wrap_content"
        android:text="@string/parking_sensor" />


</LinearLayout>