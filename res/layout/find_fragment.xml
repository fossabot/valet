<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/radioGroup"
    android:gravity="center">

    <co.valetapp.view.FontableRadioButton
        android:id="@+id/normalRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normalRadioButton"
        app:font="Gotham-Medium.ttf"
        android:textColor="@color/default_text"
        android:textSize="14sp" />

    <co.valetapp.view.FontableRadioButton
        android:id="@+id/satelliteRadioButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/satelliteRadioButton"
        app:font="Gotham-Medium.ttf"
        android:textColor="@color/default_text"
        android:textSize="14sp" />
</RadioGroup>