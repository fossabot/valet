<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/co.valetapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <co.valetapp.view.FontableTextView
        android:id="@+id/title_ftv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:visibility="invisible"
        android:text="@string/app_name_caps"
        android:textColor="@color/inverse_text_selector"
        android:textSize="24sp"
        app:font="Gotham-Bold.ttf" />

    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map_frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        class="com.google.android.gms.maps.SupportMapFragment"
        tools:context=".ParkActivity" />

    <fragment
        android:id="@+id/info_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        class="co.valetapp.InfoFragment"
        tools:context=".ParkActivity"
        tools:layout="@layout/info_fragment">
    </fragment>

    <FrameLayout
        android:id="@+id/dynamic_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bar_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

</LinearLayout>