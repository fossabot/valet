<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:babel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/radioGroup"
    android:gravity="center">

    <com.babelsdk.main.view.BabelRadioButton
        android:id="@+id/normalRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normal_radio_button"
        babel:text="normal_radio_button"
        android:textColor="@color/default_text"
        android:textSize="14sp" />

    <com.babelsdk.main.view.BabelRadioButton
        android:id="@+id/satelliteRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/satellite_radio_button"
        babel:text="satellite_radio_button"
        android:textColor="@color/default_text"
        android:textSize="14sp" />
</RadioGroup>