<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="8dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <com.babelsdk.main.view.BabelTextView
            android:id="@+id/accuracyLabelTextView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"

            android:text="@string/accuracy"
            app:babel_text="accuracy"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/accuracyTextView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"

            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/accuracyUnitLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meters"
            android:textSize="14sp" />

    </LinearLayout>


    <com.babelsdk.main.view.BabelImageView
        android:id="@+id/locationImageButton"
        android:onClick="onLocationItem"
        android:layout_width="48dp"
        android:layout_height="@dimen/barHeight"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/location_bar_item_selector"
        android:contentDescription="@string/locate_bar_item_cd"
        app:babel_content_description="locate_bar_item_cd"
        android:background="@drawable/default_selector" />
</RelativeLayout>
